source :rubygems

gem "sinatra"

gem "activemodel", :require => 'active_model'
gem "activeresource", :require => 'active_resource'

gem "openVPNServer"

group :development do
  ### Use shotgun to run server in development ###
  gem "shotgun"

  ### Required for testing
  gem 'rake'
  gem 'rack-test'
  gem 'redgreen'
end
